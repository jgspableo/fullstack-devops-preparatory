<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <%- include("partials/errors.ejs") %>
    <form action="/<%= user.id %>/update" method="POST">
      <input
        type="text"
        name="firstName"
        value="<%= user.firstName %>"
        required
      />
      <input
        type="text"
        name="lastName"
        value="<%= user.lastName %>"
        required
      />
      <input
        type="email"
        name="email"
        value="<%= user.email %>"
        id="email"
        required
      />
      <input
        type="number"
        name="age"
        value="<%= user.age %>"
        id="age"
        required
      />
      <input type="text" name="bio" value="<%= user.bio %>" id="bio" />
      <button type="submit">Update User</button>
    </form>
    <a href="/">
      <button>Back to home</button>
    </a>
  </body>
</html>
